{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.wtrfll.local/realtime/lyrics.patch.schema.json",
  "title": "lyrics.patch",
  "type": "object",
  "properties": {
    "contractVersion": { "type": "integer", "const": 1 },
    "sessionId": { "type": "string", "format": "uuid" },
    "patch": {
      "type": "object",
      "properties": {
        "lyricsId": { "type": ["string", "null"], "format": "uuid" },
        "title": { "type": ["string", "null"] },
        "author": { "type": ["string", "null"] },
        "lyricsChordPro": { "type": "string" }
      },
      "required": ["lyricsChordPro"],
      "additionalProperties": false
    }
  },
  "required": ["contractVersion", "sessionId", "patch"],
  "additionalProperties": false
}
